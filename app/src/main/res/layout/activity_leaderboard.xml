<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"

            android:layout_height="@dimen/layout_height_appbar_leaderbord_activity">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="start"
                app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed"
                app:expandedTitleMarginBottom="100dp"

                app:expandedTitleMarginStart="25dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Expanded"

                app:layout_scrollFlags="enterAlways|scroll">

                <com.example.aadproject.view.TopLeftCustomView
                    android:id="@+id/custom_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">


                </com.example.aadproject.view.TopLeftCustomView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"

                    android:background="@color/background_tablayout_leaderboar_activity"
                    app:tabIndicatorColor="@color/color_white"
                    app:tabIndicatorHeight="@dimen/tab_indicator_height_tablayout_leaderboar_activity"
                    app:tabTextColor="@color/color_white">

                </com.google.android.material.tabs.TabLayout>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="start"
                    android:alpha="0.5"

                    android:gravity="start"
                    android:theme="@style/ThemeOverlay.MaterialComponents"
                    app:layout_collapseMode="parallax"
                    app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"

                    app:titleMarginStart="?actionBarSize"
                    app:titleTextColor="@color/color_white" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager2.widget.ViewPager2

            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        </androidx.viewpager2.widget.ViewPager2>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_fab_leaderboar_activity"
            android:layout_marginVertical="@dimen/margin_vertical_fab_leaderboar_activity"
            android:layout_marginEnd="@dimen/margin_end_fab_leaderboar_activity"
            android:layout_marginBottom="?actionBarSize"
            android:elevation="0dp"
            android:gravity="center"
            android:padding="@dimen/padding_right_fab_leaderboar_activity"
            android:text="@string/text_submit_leaderboar_activity"

            app:backgroundTint="@color/color_white"
            app:layout_anchor="@id/custom_background"
            app:layout_anchorGravity="right|center"
            app:layout_collapseMode="parallax">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>