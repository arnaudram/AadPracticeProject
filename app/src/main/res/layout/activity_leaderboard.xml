<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"

            android:layout_height="200dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
app:layout_scrollFlags="enterAlways|scroll"
               app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed"
                app:collapsedTitleGravity="start"
app:expandedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Expanded"
                app:expandedTitleMarginStart="25dp"
                app:expandedTitleMarginBottom="100dp"

               android:fitsSystemWindows="true"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <com.example.aadproject.view.TopLeftCustomView
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                   android:id="@+id/custom_background"
                    android:layout_height="match_parent">


                </com.example.aadproject.view.TopLeftCustomView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
android:background="#00000000"
                android:alpha="0.8"

                    app:tabIndicatorHeight="8dp"
                    app:tabTextColor="@color/color_white"
                    app:tabIndicatorColor="@color/color_white"
                    android:layout_height="?attr/actionBarSize">

                </com.google.android.material.tabs.TabLayout>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                   android:theme="@style/ThemeOverlay.MaterialComponents"
                    android:gravity="start"
                    app:layout_collapseMode="parallax"

                    app:titleTextColor="@color/color_white"
                   app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                   android:layout_gravity="start"
                    android:alpha="0.5"

app:titleMarginStart="?actionBarSize"
                    android:layout_height="?attr/actionBarSize"></com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

        </androidx.viewpager2.widget.ViewPager2>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="?actionBarSize"
            android:elevation="0dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Submit"

            app:backgroundTint="@color/color_white"
            app:layout_anchor="@id/custom_background"
            app:layout_anchorGravity="right|center"
            app:layout_collapseMode="parallax">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>