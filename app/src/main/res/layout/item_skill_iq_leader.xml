<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="entityGadsSkill"
            type="com.example.aadproject.data.EntityGadsSkill" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:orientation="horizontal"
                >




                <ImageView
                    android:id="@+id/badge_top_skill_iq"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                   app:bind_skill_iq_badge="@{entityGadsSkill}"
android:layout_marginStart="10dp"
                    tools:src="@mipmap/ic_launcher_round">

                </ImageView>



               <LinearLayout
                   android:layout_marginStart="20dp"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/tv_top_skill_iq_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       tools:text="TextView"
                       app:bind_skill_iq_name="@{entityGadsSkill}"
                       android:layout_gravity="start"
                       android:gravity="start"
                       android:textSize="18sp"
                       />

                   <TextView
                       android:id="@+id/tv_top_skill_iq_description"
                       android:layout_width="match_parent"
                       android:layout_gravity="start"
                       android:gravity="start"
                       app:bind_skill_iq_description="@{entityGadsSkill}"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="4dp"
                       tools:text="TextView"



                       />


               </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>